# Set layout
yabai -m config layout bsp

# Set window placement
yabai -m config window_placement second_child

# Enable window borders
yabai -m config window_border on

# Set window border width
yabai -m config window_border_width 2

# Enable window border blur
yabai -m config window_border_blur on

# Set active window border color
yabai -m config active_window_border_color 0xff7aa2f7

# Set normal window border color
yabai -m config normal_window_border_color 0xfff7768e

# Disable verbose logging
yabai -m config debug_output off

# Set padding
yabai -m config top_padding 6
yabai -m config bottom_padding 6
yabai -m config left_padding 6
yabai -m config right_padding 6
yabai -m config window_gap 6

# Mouse settings
yabai -m config mouse_follows_focus on
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize
yabai -m config mouse_drop_action swap

# Disable specific apps from being managed
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="^WhatsApp$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^OpenEmu$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^AudioPluginHost$" manage=off
yabai -m rule --add app="^REW$" manage=off
yabai -m rule --add app="^Max$" manage=off